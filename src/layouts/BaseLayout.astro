---
// BaseLayout wraps every page with consistent <head> metadata, global styles,
// and the HTML structure. Individual pages slot their content into the <main>.

// Import global styles through Astro's frontmatter so Vite processes and
// bundles them in production. A raw <link> tag only works in dev mode.
import "../styles/global.css";

// Self-hosted open-source fonts (SIL OFL) via fontsource.
// Variable font files (WOFF2) get bundled by Vite and cached by the service worker.
import "@fontsource-variable/inter";
import "@fontsource-variable/source-sans-3";
import "@fontsource-variable/literata";
import "@fontsource-variable/source-serif-4";
import "@fontsource-variable/lora";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Create Devotional Bibles through verse-anchored annotations" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#2563eb" />
    <title>{title} | OEB Ministry</title>

    <!-- PWA manifest -->
    <link rel="manifest" href="/manifest.webmanifest" />

    <!-- Global styles loaded via frontmatter import above -->
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <main>
      <!-- Each page's content goes here -->
      <slot />
    </main>

    <!-- Register service worker for offline support -->
    <script>
      import { registerServiceWorker } from "../lib/register-sw";
      registerServiceWorker();
    </script>
  </body>
</html>
